<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saludapp.MainActivity" >

   <ImageView 
       android:contentDescription="@string/content_descripcion"
        android:layout_height="@dimen/largo_imaegn_coomeva"
        android:layout_width="@dimen/ancho_imagen_coomeva"
        android:id="@+id/img_coomeva"
        android:src="@drawable/coomeva"
        android:layout_alignParentLeft="true"
       
       />
   
<ImageView 
       android:contentDescription="@string/content_descripcion"
        android:layout_height="@dimen/largo_imaegn_coomeva"
        android:layout_width="@dimen/ancho_imagen_coomeva"
        android:id="@+id/img_ceotic"
        android:layout_alignParentRight="true"
        android:src="@drawable/ceotic"
       
       />
<LinearLayout  
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_below="@+id/img_coomeva"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lineaNombre"
    >
    <TextView  
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Nombre"
        android:gravity="center_horizontal"
        android:textSize="@dimen/letra_login"
        
         />
    <EditText 
        android:id="@+id/edNombre"
        android:layout_width="match_parent"
        android:layout_height="@dimen/letra_login"
        
        
        android:hint="@string/Nombre"
        
        android:background="@drawable/editstyle"
        
        />
    
    


  
    <TextView  
        android:id="@+id/tvContrasena"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Contrasena"
        android:textSize="@dimen/letra_login"
        
       
         />
    <EditText 
        android:id="@+id/edContrasena"
        android:layout_width="match_parent"
        android:layout_height="@dimen/letra_login"
        android:hint="@string/Contrasena"
        android:background="@drawable/editstyle"
        android:inputType="textWebPassword"
       
        />
    
    

  <Button 
       android:layout_marginTop="@dimen/margen_botonlogin"
       android:id="@+id/btn_Ingresar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:gravity="center_horizontal"
        android:textColor="@color/blanco"
       android:text="@string/btn_Ingresar"
       android:background="@drawable/custom_btn_seagull"
     
      />
  </LinearLayout>

</RelativeLayout>
